<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.test.api.mapper.AdminMapper">
    <resultMap id="resultMap" type="com.spring.test.api.entity.Admin">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="passwd" property="password"/>
        <result column="cloopen_id" property="cloopenId"/>
        <result column="cloopenToken" property="cloopen_token"/>
        <result column="user_ip" property="userIp"/>
    </resultMap>

    <sql id="baseColumn">
        id,
        name,
        passwd,
        cloopen_id,
        cloopen_token,
        user_ip
    </sql>

    <select id="queryAdmin" parameterType="com.spring.test.api.entity.Admin" resultMap="resultMap">
        SELECT
        <include refid="baseColumn" />
        FROM
        tb_admin
        WHERE name LIKE #{name}
    </select>
</mapper>